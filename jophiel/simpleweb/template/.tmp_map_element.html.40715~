<link rel="stylesheet" href="theme/default/style.css" type="text/css">
<link rel="stylesheet" href="theme/default/google.css" type="text/css">
<script src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=6.2&mkt=en-us">
</script>
<script src="OpenLayers.js">
</script>
<script src="js/bingmap.js">
</script>
<script language="JavaScript">
    var map;    
    $(document).ready(function init(){
        map = new OpenLayers.Map("map");
        map.addControl(new OpenLayers.Control.LayerSwitcher());
        
        var shaded = new OpenLayers.Layer.VirtualEarth("Shaded", {
            type: VEMapStyle.Shaded
        });
        var hybrid = new OpenLayers.Layer.VirtualEarth("Hybrid", {
            type: VEMapStyle.Hybrid
        });
        var aerial = new OpenLayers.Layer.VirtualEarth("Aerial", {
            type: VEMapStyle.Aerial
        });
        
        map.addLayers([shaded, hybrid, aerial]);
        
        map.setCenter(new OpenLayers.LonLat(-110, 45), 3);
        
        map.zoomToMaxExtent();
    })
</script>
