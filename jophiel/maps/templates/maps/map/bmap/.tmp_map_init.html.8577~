<script type="text/javascript">
    var myLatlng = new BMap.Point(116.404, 39.915);
    
    function map_init(){
        map = new BMap.Map("map");
        map.centerAndZoom(myLatlng, 11);
        map.addControl(new BMap.NavigationControl());
		map.enableScrollWheelZoom();
		
        for (var i = 0; i < messages.length; i++) {
            var location = new BMap.Point(messages[i].x, messages[i].y);
            var marker = new BMap.Marker(location);
            map.addOverlay(marker);
            
            poiMarker.push(marker);
            var j = i + 1;
            marker.setTitle(j.toString());
            attachSecretMessage(marker, i);
        }
        showRegion(map);
        
        //map.addEventListener("click",onClickCallback);
    }
</script>
