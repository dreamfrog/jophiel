import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import SharedService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  SearchReturnResult SearchTerm(string text, i32 startpos, i32 endpos)'
  print '  SearchReturnResult SearchCityTerm(string citycode, string text, i32 startpos, i32 endpos)'
  print '  SearchReturnResult SearchDistance(string lat, string lng, string distance)'
  print '  SearchReturnResult SearchArround(string text, string lat, string lng, string distance)'
  print '  SearchReturnResult Search(string dbname,  params)'
  print '  SearchReturnResult SearchPoi(string id)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = SharedService.Client(protocol)
transport.open()

if cmd == 'SearchTerm':
  if len(args) != 3:
    print 'SearchTerm requires 3 args'
    sys.exit(1)
  pp.pprint(client.SearchTerm(args[0],eval(args[1]),eval(args[2]),))

elif cmd == 'SearchCityTerm':
  if len(args) != 4:
    print 'SearchCityTerm requires 4 args'
    sys.exit(1)
  pp.pprint(client.SearchCityTerm(args[0],args[1],eval(args[2]),eval(args[3]),))

elif cmd == 'SearchDistance':
  if len(args) != 3:
    print 'SearchDistance requires 3 args'
    sys.exit(1)
  pp.pprint(client.SearchDistance(args[0],args[1],args[2],))

elif cmd == 'SearchArround':
  if len(args) != 4:
    print 'SearchArround requires 4 args'
    sys.exit(1)
  pp.pprint(client.SearchArround(args[0],args[1],args[2],args[3],))

elif cmd == 'Search':
  if len(args) != 2:
    print 'Search requires 2 args'
    sys.exit(1)
  pp.pprint(client.Search(args[0],eval(args[1]),))

elif cmd == 'SearchPoi':
  if len(args) != 1:
    print 'SearchPoi requires 1 args'
    sys.exit(1)
  pp.pprint(client.SearchPoi(args[0],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
